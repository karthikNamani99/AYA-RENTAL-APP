-->

    <style name="Shape.Pill" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- Outlined pill TextInputLayout with correct paddings -->
    <style name="Til.Outlined.Pill" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/Shape.Pill</item>
        <item name="shapeAppearanceOverlay">@style/Shape.Pill</item>

        <!-- ensure label & icon spacing work as expected -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <!-- stroke/colors (adjust to your palette) -->
        <item name="boxStrokeColor">#DDDDDD</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxBackgroundColor">@android:color/white</item>

        <!-- keep label floating when focused -->
        <item name="hintEnabled">true</item>
    </style>

    <style name="SubRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="SubDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <!-- res/values/styles.xml -->
    <style name="SettingsRowCard" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="SettingsTitle" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="SettingsSubtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="SettingsDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutlineVariant</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>