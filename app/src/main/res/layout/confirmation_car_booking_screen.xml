<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.sapotos.ayarental.presentation.confirmationBookingScreen.ConfirmationBookingScreen_View_Model" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F4F5F7"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingBottom="6dp">

                <ImageButton
                    android:id="@+id/btnBack"
                    style="?attr/borderlessButtonStyle"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/ic_back"
                    android:contentDescription="@string/back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="@string/confirmation"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Main card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <!-- Car row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/imgCar"
                            android:layout_width="120dp"
                            android:layout_height="70dp"
                            android:scaleType="fitCenter"
                            app:srcCompat='@drawable/suv'
                            tools:src="@drawable/suv"
                            tools:ignore="ContentDescription" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                android:id="@+id/tvCarName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='@{viewModel.carName}'
                                android:textStyle="bold"
                                android:textSize="16sp"
                                tools:text="Audi A8 L"/>

                            <TextView
                                android:id="@+id/tvPricePerDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='@{viewModel.pricePerDayLabel}'
                                android:textColor="#2E7D32"
                                android:textStyle="bold"
                                tools:text="$30/day"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#EAEAEA"/>

                    <!-- Pick up location -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/pick_up_location"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_location_on"
                        app:endIconTint="#707070">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPickupLoc"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:text='@={viewModel.pickupLocation}'
                            tools:text="2464 Royal Ln. Mesa, New Jersey 4546"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Return location -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/return_location"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_location_on"
                        app:endIconTint="#707070">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReturnLoc"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:text='@={viewModel.returnLocation}'
                            tools:text="2464 Royal Ln. Mesa, New Jersey 4546"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Pick up date/time -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/pick_up_date_and_time"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calender"
                        app:endIconTint="#707070">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPickupDate"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:focusable="false"
                            android:text='@={viewModel.pickupDateText}'
                            tools:text="7 December 2021"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Return date/time -->
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/return_date_and_time"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:endIconMode="custom"
                        app:endIconDrawable="@drawable/ic_calender"
                        app:endIconTint="#707070">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReturnDate"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@null"
                            android:singleLine="true"
                            android:focusable="false"
                            android:text='@={viewModel.returnDateText}'
                            tools:text="8 December 2021"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Pricing rows -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/per_day_car_rent"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvPerDayAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{viewModel.perDayAmountText}'
                        android:textSize="14sp"
                        tools:text="$30"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="6dp">

                    <TextView
                        android:id="@+id/tvTotalDaysLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text='@{viewModel.totalDaysLabel}'
                        android:textSize="14sp"
                        tools:text="Total 2 day rent"/>

                    <TextView
                        android:id="@+id/tvTotalDaysAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{viewModel.totalAmountText}'
                        android:textSize="14sp"
                        tools:text="$60"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EAEAEA"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingVertical="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/total_payment"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tvTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text='@{viewModel.totalAmountText}'
                        android:textStyle="bold"
                        android:textSize="16sp"
                        tools:text="$60"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:text="@string/confirm"
                android:textAllCaps="false"
                app:cornerRadius="26dp"
                app:backgroundTint="#2E7D32"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
