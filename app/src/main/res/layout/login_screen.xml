<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.sapotos.ayarental.presentation.login_page.LoginScreen_View_Model" />
        <import type="android.view.View" />
        <import type="android.text.TextUtils" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <!-- Curved red header -->
        <ImageView
            android:id="@+id/ivHeader"
            android:layout_width="0dp"
            android:layout_height="@dimen/app_spacing_350dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_login_header"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Optional car image on the header -->
        <ImageView
            android:layout_width="160dp"
            android:layout_height="@dimen/app_spacing_150dp"
            android:id="@+id/carImage"
            android:layout_marginTop="24dp"
            android:src="@drawable/convertiblet"
            app:layout_constraintTop_toTopOf="@id/ivHeader"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Card that overlaps (negative top margin) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loginCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-170dp"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/loginTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#C62828"
                android:paddingBottom="8dp" />

            <!-- Email -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:id="@+id/email"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="#2E7D32"
                app:boxStrokeColor="#D84315"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:inputType="textEmailAddress"
                    android:text='@={vm.email}' />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvEmailError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{vm.emailError ?? ``}'
                android:textColor="#D33A2F"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:visibility='@{TextUtils.isEmpty(vm.emailError) ? View.GONE : View.VISIBLE}' />

            <!-- Password -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:hint="@string/password"
                android:id="@+id/password"
                app:startIconDrawable="@drawable/ic_lock_24"
                app:startIconTint="#2E7D32"
                app:boxStrokeColor="#D84315"
                app:boxStrokeWidth="1dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:inputType="textPassword"
                    android:text='@={vm.password}' />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvPwdError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{vm.passwordError ?? ``}'
                android:textColor="#D33A2F"
                android:textSize="12sp"
                android:paddingTop="4dp"
                android:visibility='@{TextUtils.isEmpty(vm.passwordError) ? View.GONE : View.VISIBLE}' />

            <!-- Login button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/login"
                android:textAllCaps="false"
                app:cornerRadius="24dp"
                app:backgroundTint="#C0392B" />

            <!-- Sign up link -->
            <TextView
                android:id="@+id/tvSignup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:text="@string/not_registered_signup_now"
                android:textColor="#9A9A9A"
                android:textSize="13sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Put the rest of the content below the card if needed -->

</androidx.constraintlayout.widget.ConstraintLayout>
    </layout>
