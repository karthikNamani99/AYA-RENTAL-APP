<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.sapotos.ayarental.presentation.signup_page.SignUpScreen_View_Model"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/desc_font_size_10"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/btnCancel"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/ic_cancel"
                    app:tint="#B10F0F"
                    tools:ignore="ContentDescription" />


            </LinearLayout>





                    <LinearLayout
                        android:id="@+id/panelChoice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/how_do_you_want_to_sign_up"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/app_spacing_20dp"
                            android:textSize="22sp"
                            android:textColor="#1B1B1B"
                            android:paddingBottom="16dp"/>

                        <!-- Email option -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            app:cardCornerRadius="12dp"
                            android:elevation="0dp"
                            android:foreground="?attr/selectableItemBackground"
                            android:id="@+id/btnSignUp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp">

                                <ImageView
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    app:srcCompat="@drawable/ic_email"
                                    app:tint="#1B5E20"
                                    tools:ignore="ContentDescription" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="12dp"
                                    android:text="@string/sign_up_with_your_email"
                                    android:textSize="16sp"
                                    android:textColor="#1B1B1B"/>

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    app:srcCompat="@drawable/ic_arrow_right"
                                    app:tint="#1B1B1B"
                                    tools:ignore="ContentDescription" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/already_member_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="18dp"
                            android:text="@string/already_a_member"
                            android:textStyle="bold"
                            android:textColor="#1B1B1B"/>

                        <TextView
                            android:id="@+id/login_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/login"
                            android:textStyle="bold"
                            android:textColor="#D64B3D"/>

                        <TextView
                            android:id="@+id/tvLegal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/by_signing_up_you_accept_our_terms_and_conditions_and_privacy_policy"
                            android:textSize="13sp"
                            android:lineSpacingExtra="2dp"
                            android:linksClickable="true"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
