<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="16dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:strokeColor="#D7B46A"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Left gold panel (rounded on left only) -->
            <View
                android:id="@+id/leftPane"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_left_gold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.36" />

            <!-- Big white circle from the right to create the arc -->
            <ImageView
                android:id="@+id/bgCurve"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/shape_white_circle"
                android:scaleType="fitXY"
                android:translationX="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Car image ABOVE both shapes (must be transparent PNG) -->
            <ImageView
                android:id="@+id/imgCar"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="110dp"
                android:scaleType="fitCenter"
                android:src="@drawable/suv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/leftPane"
            app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="ContentDescription" />

            <!-- Title on the gold -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:text="@string/hatchback"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="@id/leftPane"
            app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
